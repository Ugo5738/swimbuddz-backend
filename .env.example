# SwimBuddz Backend â€“ Example Environment Variables
# Copy this file to `.env` and fill in real values for local development or deployment.

# Primary Postgres connection string.
# Use the async driver for SQLAlchemy by default.
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/swimbuddz

# Supabase JWT public key, used to verify Supabase-issued access tokens.
# Paste the PEM-formatted key here (multi-line string is allowed with proper quoting).
SUPABASE_JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
# Secret for verifying/testing Supabase JWTs locally (fallback when public key unavailable).
SUPABASE_JWT_SECRET=local-supabase-jwt-secret
# Supabase project ID (used by telemetry/logging or future Supabase SDK usage).
SUPABASE_PROJECT_ID=your-supabase-project-id
SUPABASE_SERVICE_ROLE_KEY=replace-with-service-role-key

# Whether to run the API in debug mode (more verbose logging, etc.)
API_DEBUG=true

# Comma-separated list of allowed CORS origins for browser clients.
BACKEND_CORS_ORIGINS=http://localhost:3000,https://swimbuddz.com

# Optional: log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Placeholders for future payment integration (Paystack/Flutterwave).
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key
FLUTTERWAVE_SECRET_KEY=your-flutterwave-secret-key

# Optional: MCP-related configuration (if needed by MCP server)
MCP_BACKEND_URL=http://localhost:8000
